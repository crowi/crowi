    "PASSWORD_SEED": {
      "description": "A password seed is used by password hash generator. ",
      "generator": "secret"
    }
  },
  "addons": [
    "mongolab",
    "redistogo",
    {
      "plan": "bonsai",
      "options": {
        "version": "6.2"
      }
    }
  ]
}
