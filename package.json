  "scripts": {
    "start": "node app.js",
    "jshint": "jshint lib/**/*.js resource/js/**/*.js",
    "dev": "concurrently --kill-others \"npm run dev:server\" \"npm run watch\"",
    "dev:server": "DEBUG=crowi:* NODE_ENV=development nodemon --watch ./lib/ --watch ./locales/ --ext 'js,json' --exec node app.js",
    "dev:client": "NODE_ENV=development webpack --progress --profile --colors --display-error-details --config tools/webpack.config.js",
    "flow": "flow",
    "test": "mocha -r test/bootstrap.js --globals chai --reporter dot test/**/*.test.js",
    "build": "npm run prod:client",
    "prod:client": "NODE_ENV=production webpack --bail --progress --colors --display-error-details --config tools/webpack.config.js",
    "webpack": "webpack",
    "watch": "npm run dev:client -- --watch",
    "postinstall": "npm run build"
  },
  "env": {
    "NODE_ENV": "production"
  },
  "bugs": {
    "url": "https://github.com/crowi/crowi/issues"
