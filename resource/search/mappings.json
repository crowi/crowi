{
  "settings": {
    "analysis": {
      "filter": {
        "english_stop": {
          "type":       "stop",
          "stopwords":  "_english_"
        },
        "english_stemmer": {
          "type":       "stemmer",
          "language":   "english"
        },
        "english_possessive_stemmer": {
          "type":       "stemmer",
          "language":   "possessive_english"
        }
      },
      "tokenizer": {
        "ngram_tokenizer": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 3,
          "token_chars": ["letter", "digit"]
        }
      },
      "analyzer": {
        "autocomplete": {
          "tokenizer":  "keyword",
          "filter": [
            "lowercase",
            "nGram"
          ]
        },
        "english": {
          "tokenizer":  "ngram_tokenizer",
          "filter": [
            "english_possessive_stemmer",
            "lowercase",
            "english_stop",
            "english_stemmer"
          ]
        }
      }
    }
  },
  "mappings": {
    "users": {
      "properties" : {
        "name": {
          "type": "text",
          "analyzer": "autocomplete",
          "include_in_all": false
        }
      }
    },
    "pages": {
      "properties" : {
        "path": {
          "type": "text",
          "copy_to": ["path_raw", "path_ja", "path_en"],
          "include_in_all": false,
          "index": false
        },
        "path_raw": {
          "type": "text",
          "analyzer": "standard",
          "include_in_all": false
        },
        "path_ja": {
          "type": "text",
          "analyzer": "kuromoji",
          "include_in_all": false
        },
        "path_en": {
          "type": "text",
          "analyzer": "english",
          "include_in_all": false
        },
        "body": {
          "type": "text",
          "copy_to": ["body_raw", "body_ja", "body_en"],
          "include_in_all": false,
          "index": false
        },
        "body_raw": {
          "type": "text",
          "analyzer": "standard",
          "include_in_all": false
        },
        "body_ja": {
          "type": "text",
          "analyzer": "kuromoji",
          "include_in_all": false
        },
        "body_en": {
          "type": "text",
          "analyzer": "english",
          "include_in_all": false
        },
        "username": {
          "type": "keyword",
          "include_in_all": false
        },
        "comment_count": {
          "type": "integer",
          "include_in_all": false
        },
        "bookmark_count": {
          "type": "integer",
          "include_in_all": false
        },
        "like_count": {
          "type": "integer",
          "include_in_all": false
        },
        "created_at": {
          "type": "date",
          "format": "dateOptionalTime",
          "include_in_all": false
        },
        "updated_at": {
          "type": "date",
          "format": "dateOptionalTime",
          "include_in_all": false
        }
      }
    }
  }
}
